<h2 class="text-4xl m-2 font-bold text-center">Cambiar contrase単a</h2>
<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg">
    <form action="" method="post" class="mt-4">
        <div class="border border-gray-200">
            <input type="password" name="password" id="password" placeholder="Contrase単a anterior"
                class="w-5/6 text-lg placeholder-gray-500 p-2 my-2 focus:gb-white" required>
            <img src="https://cdn-icons-png.flaticon.com/24/2767/2767146.png" id="show-password" onclick="showPass()"
                class="mt-4 mr-4 cursor-pointer display-flex float-right" />
        </div>
        <div class="border border-gray-200">
            <input type="password" name="password2" id="password2" placeholder="Contrase単a nueva"
                class="w-5/6 text-lg placeholder-gray-500 p-2 my-2 focus:gb-white" required>
            <img src="https://cdn-icons-png.flaticon.com/24/2767/2767146.png" id="show-password" onclick="showPass2()"
                class="mt-4 mr-4 cursor-pointer display-flex float-right" />
        </div>
        <div class="border border-gray-200">
            <input type="password" name="password3" id="password3" placeholder="Repite tu contrase単a nueva"
                class="w-5/6 text-lg placeholder-gray-500 p-2 my-2 focus:gb-white" required>
            <img src="https://cdn-icons-png.flaticon.com/24/2767/2767146.png" id="show-password" onclick="showPass3()"
                class="mt-4 mr-4 cursor-pointer display-flex float-right" />
        </div>
        <div class="text-center">
            <button type="submit" class="rounded-md gb-purple-500 w-1/3 mt-4 text-lg text-white font-semibold p-2 my-3
            bg-purple-600 focus:bg-purple-700">Enviar</button>
        </div>
        {{#if error}}
        <p class="text-red-500 font-bold text-lg my-3">*{{error}}</p>
        {{/if}}
        {{#if success}}
        <p class="text-green-500 font-bold text-lg my-3">*{{success}}</p>
        {{/if}}
    </form>
</div>